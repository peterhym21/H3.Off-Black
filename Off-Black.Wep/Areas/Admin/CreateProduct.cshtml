@page
@model Off_Black.Wep.Areas.Admin.CreateProductModel

<form method="post" class="col-8">
    <input type="hidden" asp-for="@Model.ProductDTOs" />
    <div class="form-row">
        <div class="col-md-4 mb-3">
            <label>Product Name</label>
            <input type="text" class="form-control" placeholder="Product Name" required asp-for="@Model.ProductDTOs.ProductName">
        </div>
        <div class="col-md-4 mb-3">
            <label>Product Description</label>
            <input type="text" class="form-control" placeholder="Product Description" required asp-for="@Model.ProductDTOs.ProductDescription">
        </div>
        <div class="col-md-4 mb-3">
            <label>Product Image</label>
            <input type="email" class="form-control" placeholder="Product Image" aria-describedby="inputGroupPrepend3" required asp-for="@Model.ProductDTOs.ProductImagePath" />
        </div>
        <div class="col-md-4 mb-3">
            <label>Price</label>
            <input type="tel" class="form-control" placeholder="Phone Number" aria-describedby="inputGroupPrepend3" required asp-for="@Model.ProductDTOs.Price" />
        </div>
        <div class="col-md-4 mb-3">
            <label>Price</label>
            <input type="tel" class="form-control" placeholder="Phone Number" aria-describedby="inputGroupPrepend3" required asp-for="@Model.ProductDTOs.Amount" />
        </div>
        <div class="col-md-4 mb-3">
            <label>Price</label>
            <input type="tel" class="form-control" placeholder="Phone Number" aria-describedby="inputGroupPrepend3" required asp-for="@Model.ProductDTOs.Catagory" />
        </div>
    </div>
    <button class="btn btn-primary" type="submit">Place Order</button>
</form>
