@page
@model Off_Black.Wep.Pages.Checkout.CustomerInfoModel

    <div class="row">

        <div class="col-4">
            <div class="text-center">
                <table class="text-center col-12 table">
                    <tr>
                        <th>Picture</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Amount</th>
                    </tr>
                    @foreach (var cartitems in Model.Order.OrderItems)
                    {
                        <tr>
                            <td><img src="@cartitems.Product.ProductImagePath" alt="prorduct Image" height="75" /></td>
                            <td>@cartitems.Product.ProductName</td>
                            <td>@cartitems.Product.Price kr.</td>
                            <td>@cartitems.Amount</td>
                        </tr>
                    }

                </table>
                <div>
                    <h3>Toalt Price : @Model.Order.TotalPrice</h3>
                </div>
            </div>
        </div>

        <form method="post" class="col-8">
            <input type="hidden" asp-for="@Model.Order" />
            <div class="form-row">
                <div class="col-md-4 mb-3">
                    <label>First name</label>
                    <input type="text" class="form-control" id="FirstName" placeholder="First name" required asp-for="@Model.Customer.FirstName">
                </div>
                <div class="col-md-4 mb-3">
                    <label>Last name</label>
                    <input type="text" class="form-control" id="LastName" placeholder="Last name" required asp-for="@Model.Customer.LastName">
                </div>
                <div class="col-md-4 mb-3">
                    <label>Email</label>
                    <input type="email" class="form-control" id="Email" placeholder="Email" aria-describedby="inputGroupPrepend3" required asp-for="@Model.Customer.Email" />
                </div>
                <div class="col-md-4 mb-3">
                    <label>Phone Number</label>
                    <input type="tel" class="form-control" id="PhoneNumber" placeholder="Phone Number" aria-describedby="inputGroupPrepend3" required asp-for="@Model.Customer.PhoneNumber" />
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-6 mb-3">
                    <label>City</label>
                    <input type="text" class="form-control" id="City" placeholder="City" required asp-for="@Model.Customer.City">
                </div>
                <div class="col-md-3 mb-3">
                    <label>Adress</label>
                    <input type="text" class="form-control" id="Adress" placeholder="Adress" required asp-for="@Model.Customer.Adress">
                </div>
                <div class="col-md-3 mb-3">
                    <label>Zip</label>
                    <input type="text" class="form-control" id="Zip" placeholder="Zip" required asp-for="@Model.Customer.ZipCode">
                </div>
            </div>
            <div class="form-group">
                <input id="CreditCard" type="radio" required />
                <label>
                    Vias, DK, MasterCard
                </label>
            </div>
            <div class="form-group">
                <input id="PayPal" type="radio" required />
                <label>
                    Paypal
                </label>
            </div>
            <div class="form-group">
                <input id="MobilPay" type="radio" required />
                <label>
                    mobilePay
                </label>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <input id="TermsAndConditons" class="form-check-input" type="checkbox" required>
                    <label class="form-check-label">
                        Agree to terms and conditions
                    </label>
                </div>
            </div>
            <button id="PlaceOrder" class="btn btn-primary" type="submit">Place Order</button>
        </form>

    </div>